	<tbody>
		<tr>
			<td id="startDate">2012-02-20 12:00</td>
		</tr>
	</tbody>
</table>
<div class="alert alert-box"  style="display:none;" id="alert">	<strong>Oh snap!</strong>
</div>

<%= button_to "Agendar", { :controller => "aspirador", :action => "agendar_aspiracao"} %>

<script>
$(function(){
  // implementation of custom elements instead of inputs
	var startDate = new Date(2012, 1, 20);
	$('#dp4').fdatepicker({
		format: 'mm-dd-yyyy hh:ii',
		disableDblClickSelection: true,
		pickTime: true
	})
		.on('changeDate', function (ev) {
		$('#alert').hide();
		startDate = new Date(ev.date);
		$('#startDate').text($('#dp4').data('date'));
		$('#dp4').fdatepicker('hide');
	});
});
</script>
</div>