<section id="services" class="emerald">
    <div class="container">
        <div class="row">

            <!-- Twitter -->
            <div class="col-md-4 col-sm-6">
                <div class="media">
                    <div class="pull-left">
                        <i class="icon-twitter icon-md"></i>
                    </div>
                  <%= link_to "https://twitter.com/r2-pi2" do %>
                    <div class="media-body">
                        <h3 class="media-heading">Acompanhe pelo Twitter</h3>
                        <p>Fique por dentro das últimas notícias.</p>
                    </div>
                  <% end %>
                </div>
            </div><!--/.col-md-4-->

            <!-- Facebook -->
            <div class="col-md-4 col-sm-6">
                <div class="media">
                    <div class="pull-left">
                        <i class="icon-facebook icon-md"></i>
                    </div>
                    <div class="media-body">
                        <h3 class="media-heading">R2-Pi2 no Facebook</h3>
                        <p>Curta-nos no facebook.</p>
                    </div>
                </div>
            </div><!--/.col-md-4-->

            <!-- Google Plus -->
            <div class="col-md-4 col-sm-6">
                <div class="media">
                    <div class="pull-left">
                        <i class="icon-google-plus icon-md"></i>
                    </div>
                    <div class="media-body">
                        <h3 class="media-heading">Veja no Google Plus</h3>
                        <p>Novidades, atualizações, novas funcionalidades,também pelo Google Plus.</p>
                    </div>
                </div>
            </div><!--/.col-md-4-->
        </div>
    </div>
</section><!--/#services-->
