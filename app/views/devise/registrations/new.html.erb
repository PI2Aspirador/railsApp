<section id="title" class="emerald">
	<div class="container">
		<div class="row">
			<div class="col-sm-6">
				<h1>Cadastre-se</h1>

			</div>
		</div>
	</div>
</section>
<section id="portfolio" class="container">
	<div class="col-md-6 col-md-offset-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <campo style="font-weight: bold;">Email<campo><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <campo style="font-weight: bold;">Senha<campo>
    <% if @minimum_password_length %>
    <em>(Mínimo de <%= @minimum_password_length %> caractéres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <campo style="font-weight: bold;">Confrimar Senha<campo><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
	</div>
</section>
