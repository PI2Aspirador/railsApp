<section id="portfolio" class="container">
	<div class="row">
		<div class="col-md-12 col-md-offset-5 form-login">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <campo style="font-weight: bold;">Email<campo><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <campo style="font-weight: bold;">Senha<campo><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <campo style="font-weight: bold;">Lembrar de mim<campo>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Entrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</section>
